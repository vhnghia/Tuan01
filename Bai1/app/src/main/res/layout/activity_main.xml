<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So A: " />

        <EditText
            android:id="@+id/edtSoA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="So B: " />

        <EditText
            android:id="@+id/edtSoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtKetQua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:typeface="normal" />

        <Button
            android:id="@+id/btTong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tong 2 So" />

        <Button
            android:id="@+id/btHieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hieu 2 So" />

        <Button
            android:id="@+id/btThuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thuong 2 So" />

        <Button
            android:id="@+id/btTich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tich 2 So" />

        <Button
            android:id="@+id/btUSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uoc So Chung Lon Nhat" />

        <Button
            android:id="@+id/btExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thoat Chuong Trinh"
            android:textColor="@android:color/holo_red_light" />

    </LinearLayout>

</LinearLayout>
